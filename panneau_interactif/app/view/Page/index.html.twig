{% extends 'Layout/layout.html.twig' %}

{% block title %}
    {{ parent() }} - Home
{% endblock %}

{% block content %}

        <h1 class="fs20px">Ajoutez un bien</h1>
<div class="dFlex flexDC fs15px">
    <form method="POST" action="">
        <div>Type</div>
            <select name="type">
                <option value="">Type de bien</option>
                {% for type in type %}
                    <option value="{{ type }}">{{ type }}</option>
                {% endfor %}
            </select>
        <div>
            Nombre de pièces
        </div>
            <input type="number" name="nb_pieces">
        <div>
            Surface (m²)
        </div>
            <input type="number" name="surface">
        <div>
            Prix
        </div>
            <input type="number" name="prix">
        <div>
            Ville
        </div>
            <input type="text" name="ville">
        <div>
            Description
        </div>
            <input type="text" name="description">
        <div>
            Performance énergetique
        </div>
            <input type="number" name="perf_nrj">
        <div>
            Gaz à Effets de Serre (GES)
        </div>
            <input type="number" name="ges">
        <div>
            Adresse
        </div>
            <input type="text" name="adresse">
        <div>
            Prestation
        </div> 

            <select name="prestation">
                <option value="vente">à vendre</option>
                <option value="location">à louer</option>
            </select>

            <input type="text" name="flashcode" value="{{ flashcodename }}" style="display:none;">  
            <img src="{{ QRcode }}">

        	<input type="submit" name="valider" value="Valider">
    </form>

</div>

<div id="mapid" class="map"></div>

<script>    
    


            var mymap = L.map('mapid').setView([47.323767, 5.033761], 13);

            var southWest = L.latLng(47.183665, 4.632806),
                northEast = L.latLng(47.445286, 5.503992),
                mybounds = L.latLngBounds(southWest, northEast);

            L.tileLayer('https://api.tiles.mapbox.com/v4/{id}/{z}/{x}/{y}.png?access_token=pk.eyJ1IjoibWFwYm94IiwiYSI6ImNpejY4NXVycTA2emYycXBndHRqcmZ3N3gifQ.rJcFIG214AriISLbB6B5aw', {
            bounds: mybounds,
            maxBounds: mybounds,
            maxZoom: 22,
            minZoom: 14,
            attribution:'Map data &copy; <a href="https://www.openstreetmap.org/">OpenStreetMap</a> contributors, ' +
            '<a href="https://creativecommons.org/licenses/by-sa/2.0/">CC-BY-SA</a>, ' +
            'Imagery © <a href="https://www.mapbox.com/">Mapbox</a>',
            id: 'mapbox.streets'
            }).addTo(mymap);


</script>

{% endblock %}